<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ThÃ¨me principal de l'application -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#4CAF50</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <!-- Style pour les titres principaux -->
    <style name="TitleTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2196F3</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Style pour les sous-titres -->
    <style name="SubtitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Style pour les boutons principaux -->
    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <!-- Style pour les boutons d'applications -->
    <style name="AppButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/app_button_background</item>
    </style>

    <!-- Style pour les boutons d'applications disponibles -->
    <style name="AppButtonAvailableStyle" parent="AppButtonStyle">
        <item name="android:background">@drawable/app_button_available</item>
    </style>

    <!-- Style pour les EditText -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#999999</item>
    </style>

</resources>